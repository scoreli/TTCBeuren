        <CheckBox
            android:id="@+id/box_siegb0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etxt_ttrb0"
            android:layout_alignBottom="@+id/etxt_ttrb0"
            android:layout_toRightOf="@+id/etxt_ttrb0"
            android:text="@string/text_sieg" />

        <CheckBox
            android:id="@+id/box_siegb1"
