<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.ttcbeuren.ttcbeurenhauptapp.detailspiel.DetailActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Spielsystem"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textv_spielsystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spielsystem"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/DetailBlau" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Mannschaftsart"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textv_mannschaftsart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mannschaftart"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/DetailBlau" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_heimmannschaft"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textv_Heimmanschaft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heimmannschaftplatz"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/DetailBlau" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_gastmannschaft"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textv_Gastmannschaft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gastmannschaftsplatz"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/DetailBlau" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_spieldatum"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textv_Spieldatum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datumsplatz"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/DetailBlau" />

        <TextView
            android:id="@+id/textV_beschreibungspielende"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Spielende"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textv_Spielende"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Endeplatz"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/DetailBlau" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="56dp" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textv_spielstandheim"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textv_spielstandheim"
                android:text="@string/text_heim_detail"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textv_spielstandheim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Heim"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/DetailBlau"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textv_spielstandgast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Gast"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/DetailBlau"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textv_spielstandgast"
                android:text="@string/text_gast_detail"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/text_Status"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/DetailBlau" />

    </LinearLayout>

</ScrollView>